
@{
    ViewBag.Title = "Login";
}
<div class="bg-pattern-style">
    <div class="content full-width">

        <!-- Login Tab Content -->
        <div class="account-content">
            <div class="account-box">
                <div class="login-right">
                    <div class="login-header">
                        <h3>Login <span>Mentorment</span></h3>
                    </div>
                    <form method="post">
                        @{
                            if (ViewBag.Validation == "False")
                            {
                                <p style="color:red;" id="ErrorMsg"> Invalid Email or Password</p>
                            }
                        }
                        <div class="form-group">
                            <label class="form-control-label">Email Address</label>
                            <input type="email" name="email" class="form-control" validation='validateEmail'>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">Password</label>
                            <div class="pass-group">
                                <input type="password" name="password" class="form-control pass-input" validation='validate'>
                                <span class="fas fa-eye toggle-password"></span>
                            </div>
                        </div>
                        <div class="text-right">
                            <a class="forgot-link" href="/Member/ForgetPassword">Forgot Password ?</a>
                        </div>
                        <button class="btn btn-primary login-btn" type="submit" onclick="return ValidateClick();" >Login </button>
                        <div class="text-center dont-have">Don’t have an account? <a href="/Register/RegisterNewMember">Register</a></div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /Login Tab Content -->
    </div>
</div>
<script src="~/Scripts/Register/RegisterationValidation.js"></script>
